{
  "id": null,
  "title": "TinyFlow Shortener Overview",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests per second (by uri)",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{uri!~\"/actuator.*\"}[1m])) by (uri)",
          "legendFormat": "{{uri}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95 (by uri)",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{uri!~\"/actuator.*\"}[5m])) by (le, uri))",
          "legendFormat": "{{uri}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error rate (5xx)",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\",uri!~\"/actuator.*\"}[5m])) / sum(rate(http_server_requests_seconds_count{uri!~\"/actuator.*\"}[5m]))",
          "legendFormat": "error-rate"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Redirect latency p95",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{uri=~\"/api/redirect/.*\"}[5m])) by (le))",
          "legendFormat": "redirect p95"
        }
      ]
    }
  ],
  "templating": {"list": []}
}